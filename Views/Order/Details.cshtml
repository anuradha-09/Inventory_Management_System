@using Inventory_Management_System.Models;
@model Order
@{
    ViewData["Title"] = "Order Details";
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Order #@Model.OrderId</h5>
        <p class="card-text">
            <strong>Product:</strong> @Model.Product?.Name <br />
            <strong>Quantity:</strong> @Model.Quantity <br />
            <strong>Order Date:</strong> @Model.OrderDate.ToString("yyyy-MM-dd")
        </p>

        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</div>
