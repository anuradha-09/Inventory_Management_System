
@using Inventory_Management_System.Models;
@model Product
@{
    ViewData["Title"] = "Details";
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">
            <strong>Quantity:</strong> @Model.Quantity <br />
            <strong>Price:</strong> @Model.Price.ToString("0.00") <br />
            <strong>Reorder Threshold:</strong> @Model.ReorderThreshold <br />
            <strong>Supplier:</strong> @Model.Supplier?.Name
        </p>
        <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</div>
